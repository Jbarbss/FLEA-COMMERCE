<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; Back to Dashboard</a>
  <h2 class="title mt-5">Edit Product</h2><hr>
  <form class="edit-product-form">
    <div>
      <label for="product-name">Product Name:</label>
      <input class="input" name="product-name" type="text" value="{{product.product_name}}" />
    </div>
    <div>
      <label for="product-details">Product Details:</label>
      <input class="textarea" name="product-details" type="text" value="{{product.product_details}}" />
    </div>
    <div>
      <label for="product-price">Product Price:</label>
      <input class="textarea" name="product-price" id="product-price" type="text" value="{{product.product_price}}" />
    </div>
    <div>
      <label for="product-price">Stock:</label>
      <input class="textarea" name="stock" id="stock" type="text" value="{{product.stock}}" />
    </div>
    <div>
      <label for="product-price">Email:</label>
      <input class="textarea" name="user_email" id="user_email" type="text" value="{{product.user_email}}" />
    </div>
    <div>
      <label for="product-image">Product Image URL:</label>
      <input class="textarea" name="product_image" id="product_image" type="text" value="{{product.product_image}}" />
    </div>
  
  
  {{!-- <input type='text' name='product_image'/> --}}

    <button type="submit" class="button is-success save-post-btn">save product</button>
    <button type="button" class="button is-danger delete-post-btn">delete product</button>
  </form>
</article>

