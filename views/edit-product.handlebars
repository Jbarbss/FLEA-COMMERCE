  <h2 class="title mt-5">Edit Product</h2><hr>
  <form class="edit-product-form">
    <div>
      <label for="product-name">Product Name:</label>
      <input class="input" name="product-name" type="text" value="{{product.product_name}}" />
    </div>
    <div>
      <label for="product-details">Product Details:</label>
      <input class="textarea" name="product-details" type="text" value="{{product.product_details}}" />
    </div>
     <div>
        <label for="product-price">Product Price</label>
        <input class="textarea" name="product-price" type="text" value="{{product.product_price}}" />
    </div>
    <div>
      <label for="stock">Product Stock:</label>
      <input class="textarea" name="stock" type="text" value="{{product.stock}}" />
    </div>
  
